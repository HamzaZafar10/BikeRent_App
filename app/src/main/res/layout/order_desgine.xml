<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="350dp"
        android:layout_margin="20dp"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >

            <ImageView
                android:id="@+id/ImageCard"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:src="@drawable/image29"></ImageView>

            <TextView
                android:id="@+id/TextShowCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/TitieCard"
                android:text="Title Name"
                android:layout_marginTop="20dp"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/TitieCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:text="Title:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/PriceCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TitieCard"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="20dp"
                android:text="Price:"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <TextView
                android:id="@+id/PriceCardShow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/TextShowCard"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/PriceCard"
                android:text="Price"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:textStyle="bold">

            </TextView>

            <ImageButton
                android:id="@+id/plusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PriceCardShow"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/PriceCard"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_add_24"
                android:text="Price">

            </ImageButton>

            <TextView
                android:id="@+id/Quinity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PriceCardShow"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="23dp"
                android:layout_toRightOf="@id/plusBtn"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold">

            </TextView>

            <ImageButton
                android:id="@+id/MinusBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/PriceCardShow"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@id/Quinity"
                android:background="@color/white"
                android:src="@drawable/ic_baseline_remove_24"
                android:text="Price">

            </ImageButton>
        </RelativeLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>